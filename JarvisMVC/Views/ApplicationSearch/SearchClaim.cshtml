@model JarvisMVC.Models.SearchCriteria

@*Reset and Cancel Button Confirmation pop-up message on action taken by user*@
<script>
    function PostReset() {
        if (confirm("Do you really want to Reset? This will refresh the Search Criteria"))
            window.location.href = "/ApplicationSearch/SearchClaim/";
        else
            return false;
    }

    function PostCancel() {
        if (confirm("Do you really want to cancel? This will redirect back to Home Page"))
            window.location.href = "/Home/Index/";
        else
            return false;
    }

    function PostSearch() {

        window.location.href = "/ApplicationSearch/SearchClaim/";
    }

    @*Add focus: Positions the cursor to the first text fields*@
    $(function () {
        $('.focus :input:first').focus();
    });

</script>


